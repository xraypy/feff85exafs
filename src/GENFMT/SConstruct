import sys
sys.path.append('..')
from FortranCompilation import CompilationEnvironment

env = CompilationEnvironment()

bin_src = Split('ffmod5.f  fmtrxi.f  genfmt.f  mmtr.f  mmtrxi.f  rdpath.f  regenf.f  rot3i.f \
                 sclmz.f   setlam.f  snlm.f    xstar.f')

env.Program('genfmt', bin_src, \
        LIBS = ['feffcom', 'jsonfortran', 'feffjson', 'feffmath', 'feffpar'], \
        LIBPATH = ['../COMMON', '../JSON', '../MATH', '../PAR'])

